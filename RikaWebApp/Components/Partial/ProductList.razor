@code {
    public class Product
    {
        public int Id { get; set; }
        public string? Title { get; set; } // Namn eller titel på produkten
        public string? Ingress { get; set; } // Kort beskrivning av produkten
        public decimal? Price { get; set; } // Pris på produkten
        public string? ImageUrl { get; set; } // URL till produktens namn
        public string? Category { get; set; } // Kategori för produkter, t.ex "Clothes", "Bags" etc.
    }
}
