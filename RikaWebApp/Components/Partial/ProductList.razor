@page "/products"
@*_ProductList.razor.css*@

<div class="container">
    <div class="product-list row">
        @foreach (var product in Products)
        {
            <div class="col-3 product-items">
                <img src="@product.ImageUrl" alt="@product.Title" class="product-image" />
                <h4>@product.Title</h4>
                <p>@product.Ingress</p>
                <p>Pris: @product.Price?.ToString("C")</p>
            </div>
        }
    </div>
</div>

@code {
    //Deklarera och initiera Products-listan
    private List<Product> Products = new List<Product>
    {
        new Product { Id = 1, Title = "Clothes", Ingress = "Stilfulla kläder för alla tillfällen", Price = 199, ImageUrl = "/images/dress.jpg", Category = "Clothes"},
        new Product { Id = 2, Title = "Bags", Ingress = "Eleganta och praktiska väskor", Price = 299, ImageUrl = "/images/bag.jpg", Category = "Bags"},
        new Product { Id = 3, Title = "Shoes", Ingress = "Bekväma skor för vardag och fest", Price = 399, ImageUrl = "/images/shoes.jpg", Category = "Shoes"},
        new Product { Id = 4, Title = "Jewelry", Ingress = "Vackra smycken som förgyller dagen", Price = 499, ImageUrl = "/images/jewelry.jpg", Category = "Jewelry"},
