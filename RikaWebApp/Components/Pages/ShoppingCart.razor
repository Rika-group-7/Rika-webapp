@page "/shoppingcart"

@rendermode InteractiveServer

<section class="shoppingcart-section">
    <div class="container">
        <div class="content"> 
            <div class="shoppingcart-navigation">
                <a href="#" class="go-back-to-page">
                    <i class="fa-solid fa-arrow-left"></i>
                </a>
                <div class="shoppingcart-nav-comp">
                    <a href="#" class="shoppingcart-nav shadow">
                        <i class="fa-solid fa-bag-shopping"></i>
                    </a>
                    <div class="items-in-bag-circle">3</div>
                </div>
            </div>
            <div class="my-cart">
                <h3>My Cart</h3>
                <div class="cart-items">
                    <div class="cart-item shadow">
                        <div href="#" class="item-details">
                            <a class="link-part"href="#">
                                <div class="item-left-side">
                                    <img src="/Images/odelle-dress.jpg" />
                                </div>
                                <div class="item-right-side">
                                    <h4 class="product-title">Roller Rabbit</h4>
                                    <h4 class="product-description">Vado Odelle Dress</h4>
                                    <h4 class="product-price">$198.00</h4>
                                </div>
                            </a>
                            
                            <div class="change-quantity">
                                <button @onclick="DecrementCounter" class="decrement-btn">-</button>
                                <div class="chosen-quantity">@Counter</div>
                                <button @onclick="IncrementCounter" class="increment-btn">+</button>
                            </div>
                        </div>

                        <a href="#" class="remove-item">
                            <i class="fa-solid fa-trash"></i>
                        </a>
                    </div>
                </div>
            </div>
            <div class="proceed-checkout">
                <div class="proceed-area container">
                    <div class="total-price-items">
                        <p class="total-text">Total (3 item):</p>
                        <h3 class="h3-price">$500</h3>
                    </div>
                    <div class="button-area">
                        <button class="proceed-btn"><span>Proceed to Checkout</span><div class="btn-icon"><i class="fa-solid fa-arrow-right"></i></div></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@code {
    private int Counter { get; set; } = 1;

    private void IncrementCounter()
    {
        Counter++;
    }

    private void DecrementCounter()
    {
        if (Counter > 1)
        {
            Counter--;
        }
    }

    private void NavigateToDetails()
    {
        // Lägg till navigeringslogik här om det behövs
    }
}
